<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/pale_green"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AboutApp">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textView4"
        android:layout_width="179dp"
        android:layout_height="41dp"
        android:fontFamily="@font/akaya_telivigala"
        android:text="about NUTRIP:"
        android:textColor="@color/green_700"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.983">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/eat"
                android:layout_width="276dp"
                android:layout_height="211dp"
                android:src="@drawable/eating" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/akaya_telivigala"
                    android:text="Eat Healthy to stay away from doctor and malnutients"
                    android:textColor="@color/green_700"
                    android:textSize="20dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/run"
                android:layout_width="226dp"
                android:layout_height="176dp"
                android:layout_gravity="left"
                android:src="@drawable/running" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:fontFamily="@font/akaya_telivigala"
                    android:text="Do regular exercises to be fit"
                    android:textColor="@color/green_700"
                    android:textSize="20dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/cal"
                android:layout_width="226dp"
                android:layout_height="176dp"
                android:src="@drawable/calender" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/akaya_telivigala"
                    android:text="eat properly according to the date and time"
                    android:textColor="@color/green_700"
                    android:textSize="20dp" />

            </LinearLayout>


            <ImageView
                android:id="@+id/calender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/akaya_telivigala"
                android:src="@drawable/baseline_calendar"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click me "
                android:textColor="@color/black"/>





        </LinearLayout>


    </ScrollView>
</LinearLayout>